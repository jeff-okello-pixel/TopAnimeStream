<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
        <include android:id="@+id/toolbar" layout="@layout/toolbar"/>
   	    <ListView
            android:layout_below="@id/toolbar"
   	        android:id="@+id/left_drawer"
        	android:paddingTop="10dp"
        	android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:scrollbars="none"
            android:background="@color/blueDrawer"
            android:divider="@android:color/transparent"
    		android:dividerHeight="8dp"/>
   	    
	    <TextView 
		    android:id="@+id/txtNoConnection"
		    android:textSize="20sp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerInParent="true"
		    android:visibility="gone"
		    android:text="@string/no_connection"/>
        <LinearLayout
            android:id="@+id/layBottom"
            android:layout_below="@id/toolbar"
            android:layout_toRightOf="@id/left_drawer"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.sample.castcompanionlibrary.widgets.MiniController
                android:id="@+id/miniController"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <com.fwwjt.pacjz173199.AdView
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ap:animation="fade"
                ap:banner_type="inappad"
                ap:placementType="interstitial"
                ap:test_mode="false"
                ap:canShowMR="false"/>
        </LinearLayout>
	    <com.astuetz.viewpager.extensions.PagerSlidingTabStrip
		    android:id="@+id/tabs"
		    android:layout_width="match_parent"
		    android:layout_height="48dp"
		    android:layout_toRightOf="@id/left_drawer" />
	    
		<android.support.v4.view.ViewPager
		    android:id="@+id/pager"
		    android:layout_below="@id/tabs"
            android:layout_above="@id/layBottom"
		    android:layout_toRightOf="@id/left_drawer"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"/> 
	


</RelativeLayout>