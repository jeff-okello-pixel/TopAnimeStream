<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <com.topanimestream.custom.CoordinatedHeader
                    android:id="@+id/activity_home_header"
                    android:layout_below="@id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="148dp" >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="148dp">

                        <RelativeLayout
                            android:id="@+id/layRecentlyWatched"
                            android:layout_width="match_parent"
                            android:layout_height="100dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/attackontitanbackdrop"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#55000000"></RelativeLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Attack on titan"
                                android:layout_marginLeft="5dp"
                                style="@style/TextViewWhite"
                                android:layout_centerVertical="true"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_play_dark"/>

                        </RelativeLayout>
                        <com.astuetz.viewpager.extensions.PagerSlidingTabStrip
                            android:id="@+id/tabs"
                            android:layout_width="match_parent"
                            android:background="#ffffff"
                            android:layout_below="@id/layRecentlyWatched"
                            android:layout_height="48dp" />
                    </RelativeLayout>
                </com.topanimestream.custom.CoordinatedHeader>

            <include layout="@layout/toolbar"/>


            <TextView
                android:id="@+id/txtNoConnection"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:text="@string/no_connection"/>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/blueDrawer"
        app:headerLayout="@layout/drawer_header"
        app:itemBackground="@color/menu_state_list"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:menu="@menu/drawer"/>
</android.support.v4.widget.DrawerLayout>

