<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgHeaderBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55000000"></RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imgHeaderProfilePic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:border_color="#EEEEEE"
            app:border_width="4dp"
            app:shadow="true"
            app:shadow_radius="10"
            app:shadow_color="#000000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgHeaderProfilePic"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtUsername"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textSize="20sp"
                style="@style/TextViewWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtJoinedDate"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                style="@style/TextViewWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtAbout"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                style="@style/TextViewWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>