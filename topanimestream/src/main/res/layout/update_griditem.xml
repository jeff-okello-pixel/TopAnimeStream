<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="false"
    android:background="@color/overlay">



    <ImageView
        android:id="@+id/placeholder_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:scaleType="centerInside"
        android:alpha="0.4" />

    <ImageView
        android:id="@+id/cover_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/addedDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/griditem_update_title_horizontal"
        android:paddingRight="@dimen/griditem_update_title_horizontal"
        android:paddingBottom="@dimen/griditem_update_title_horizontal"
        android:gravity="start|center_vertical"
        android:textSize="@dimen/griditem_year_textsize"
        android:textColor="@android:color/white"
        android:alpha="0.7"
        tools:text="3 hours ago" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/txtAddedEpisodes"
        android:layout_above="@id/addedDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/griditem_update_title_horizontal"
        android:paddingRight="@dimen/griditem_update_title_horizontal"
        android:gravity="start|center_vertical"
        android:textSize="@dimen/griditem_year_textsize"
        android:textColor="@android:color/white"
        android:alpha="0.7"
        tools:text="Episode 1 to 13" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/txtTitle"
        android:layout_above="@id/txtAddedEpisodes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:paddingLeft="@dimen/griditem_update_title_horizontal"
        android:paddingRight="@dimen/griditem_update_title_horizontal"
        android:gravity="start|center_vertical"
        android:textSize="@dimen/griditem_title_textsize"
        android:textColor="@android:color/white"
        app:typeface="roboto_medium"
        tools:text="Interstellar" />

    <ImageView
        android:id="@+id/imgFlag"
        android:alpha="0.85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:paddingTop="10dp"
        android:paddingLeft="@dimen/griditem_update_title_horizontal"
        android:paddingRight="@dimen/griditem_update_title_horizontal" />

    <View
        android:id="@+id/focus_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay"
        android:visibility="gone" />

</RelativeLayout>