<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layScreenshot"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="170dp"
            android:layout_height="120dp">

                <ImageView
                    android:id="@+id/imgScreenshot"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/txtReleasedDate"
                    android:textSize="10sp"
                    android:textColor="#f5f5f5"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#A0000000"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#33000000"
                    android:layout_above="@id/txtReleasedDate">
                    <TextView
                        android:id="@+id/txtEpisodeUnavailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Episode not available yet."/>
                </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/txtEpisodeNumber"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Episode 52"/>

                <TextView
                    android:id="@+id/txtEpisodeName"
                    android:textColor="#999"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:maxLines="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="The first, second and third dsf sdfsd fsdfsdfsdf ddd"/>

        </LinearLayout>

</LinearLayout>
