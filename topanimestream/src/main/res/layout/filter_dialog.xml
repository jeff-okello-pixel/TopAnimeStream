<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order by"
                    android:textSize="20sp"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinnerOrderByValues"
                    android:drawSelectorOnTop="true"
                    android:id="@+id/spinnerOrderBy"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="20sp"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinnerStatusValues"
                    android:drawSelectorOnTop="true"
                    android:id="@+id/spinnerStatus"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dubbed/Subbed"
                    android:textSize="20sp"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinnerDubbedSubbedValues"
                    android:drawSelectorOnTop="true"
                    android:id="@+id/spinnerDubbedSubbed"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="20sp"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/spinnerCategoryValues"
                    android:drawSelectorOnTop="true"
                    android:id="@+id/spinnerCategory"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnApply"
        android:text="Apply"
        android:textColor="#f5f5f5"
        android:background="@drawable/button_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>