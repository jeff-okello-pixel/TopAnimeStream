    android:orientation="horizontal">
	<fragment 
	    class="com.aniblitz.EpisodesContainerFragment"
	    android:id="@+id/episodeListFragment"
	    android:layout_width="0px"
	    android:layout_weight="1"
	    android:layout_height="match_parent"/>
