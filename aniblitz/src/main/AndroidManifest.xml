<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aniblitz"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="14" />

    <application
        android:name="com.aniblitz.App"
        android:allowBackup="true"
        android:largeHeap="true"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme" >
        <provider
            android:name="com.aniblitz.SuggestionProvider"
            android:authorities="com.aniblitz.SuggestionProvider" />

        <activity
            android:name="com.aniblitz.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value="com.aniblitz.AnimeSearchActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aniblitz.Settings"
            android:label="Settings" >
        </activity>
        <activity
            android:name="com.aniblitz.FavoriteActivity"
            android:label="Favorites" >
        </activity>
        <activity
            android:name="com.aniblitz.ProviderActivity"
            android:label="Providers" >
        </activity>
        <activity
            android:name="com.aniblitz.HistoryActivity"
            android:label="History" >
        </activity>
        <activity
            android:name="com.aniblitz.AnimeSearchActivity"
            android:label="@string/title_activity_anime_search"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.default_searchable"
                android:value="com.aniblitz.AnimeSearchActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.aniblitz.EpisodesActivity">
        </activity>
        <activity
            android:name="com.aniblitz.AnimeSourcesActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" >
        </activity>
    </application>

</manifest>
