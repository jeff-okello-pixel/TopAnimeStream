<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aniblitz"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="14" />

    <application
        android:name="com.aniblitz.App"
        android:allowBackup="true"
        android:largeHeap="true"
        android:icon="@drawable/ic_launcher"
        android:label="Aniblitz"
        android:theme="@style/AppTheme" >
        <provider
            android:name="com.aniblitz.SuggestionProvider"
            android:authorities="com.aniblitz.SuggestionProvider" />

        <activity
            android:name="com.aniblitz.MainActivity"
            android:configChanges="locale|layoutDirection" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value="com.aniblitz.AnimeSearchActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aniblitz.Settings"
            android:configChanges="locale|layoutDirection"
            android:label="Settings" >
        </activity>
        <activity
            android:name="com.aniblitz.FavoriteActivity"
            android:configChanges="locale|layoutDirection"
            android:label="Favorites" >
        </activity>
        <activity
            android:name=".EpisodeDetailsActivity"
            android:configChanges="locale|layoutDirection"
            android:label="Providers" >
        </activity>
        <activity
            android:name="com.aniblitz.HistoryActivity"
            android:configChanges="locale|layoutDirection"
            android:label="History" >
        </activity>
        <activity
            android:name="com.aniblitz.AnimeSearchActivity"
            android:configChanges="locale|layoutDirection"
            android:label="@string/title_activity_anime_search"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.default_searchable"
                android:value="com.aniblitz.AnimeSearchActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".AnimeDetailsActivity"
            android:configChanges="locale|layoutDirection">
        </activity>
        <activity
            android:name="com.google.sample.castcompanionlibrary.cast.player.VideoCastControllerActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.google.sample.cast.refplayer.VideoBrowserActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />
    </application>

</manifest>
